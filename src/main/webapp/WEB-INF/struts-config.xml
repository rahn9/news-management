<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
    <form-beans>
        <form-bean name="newsActionForm" type="com.epam.vakhidat.news_management.NewsForm">
            <form-property name="title" type="java.lang.String"/>
            <form-property name="creationDate" type="java.sql.Date"/>
            <form-property name="brief" type="java.lang.String"/>
            <form-property name="content" type="java.lang.String"/>
        </form-bean>
    </form-beans>

    <action-mappings>
        <action path="/addNewsPage"
                type="org.apache.struts.actions.ForwardAction"
                parameter="/classes/jsp/add-news.jsp"/>

        <action
                path="/addNews"
                type="com.epam.vakhidat.news_management.action.AddNewsAction"
                name="newsActionForm"
                input="jsp/add-news.jsp">
            <forward name="success" redirect="true" path="jsp/success.jsp"/>
            <forward name="failure" path="jsp/error.jsp"/>
        </action>
    </action-mappings>

    <message-resources parameter="news"/>

    <plug-in className="org.springframework.web.struts.ContextLoaderPlugIn">
        <set-property property="contextConfigLocation"
                      value="/WEB-INF/spring-config.xml"/>
    </plug-in>
</struts-config>