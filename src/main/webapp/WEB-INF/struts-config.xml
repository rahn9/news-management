<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
    <form-beans>
        <form-bean name="newsForm" type="com.epam.vakhidat.news_management.entities.NewsForm">
            <form-property name="title" type="java.lang.String"/>
            <form-property name="creationDate" type="java.lang.String"/>
            <form-property name="brief" type="java.lang.String"/>
            <form-property name="content" type="java.lang.String"/>
        </form-bean>
    </form-beans>

    <action-mappings>
        <action path="/addNewsPage"
                type="org.apache.struts.actions.ForwardAction"
                parameter="/jsp/add-news.jsp"
                />
        <action
                path="/addNews"
                type="com.epam.vakhidat.news_management.action.AddNewsAction"
                name="newsForm"
                validate="false"
                input="jsp/add-news.jsp"
                >
            <forward name="success" path="/newsList.do"/>
            <forward name="failure" path="/jsp/error.jsp"/>
        </action>
        <action path="/viewNews"
                type="com.epam.vakhidat.news_management.action.ViewNewsAction">
            <forward name="success" redirect="true" path="/newsList.do"/>
        </action>
        <action path="/delete" type="com.epam.vakhidat.news_management.action.DeleteNewsAction">
            <forward name="success" redirect="true" path="/newsList.do"/>
        </action>

        <action path="/newsList" type="com.epam.vakhidat.news_management.action.NewsListAction">
            <forward name="success" path="/jsp/news-list.jsp"/>
        </action>

        <action path="/edit" type="com.epam.vakhidat.news_management.action.EditNewsAction">
            <forward name="success" path="/jsp/edit-news.jsp"/>
        </action>
        <action path="/locale" type="com.epam.vakhidat.news_management.action.ChangeLocaleAction" parameter="language">
            <forward name="success" redirect="true" path="/jsp/add-news.jsp"/>
        </action>
    </action-mappings>

    <message-resources parameter="news"/>

    <plug-in className="org.springframework.web.struts.ContextLoaderPlugIn">
        <set-property property="contextConfigLocation"
                      value="/WEB-INF/spring-config.xml"/>
    </plug-in>
</struts-config>